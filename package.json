{
  "name": "random-quote-machine",
  "private": true,
  "version": "1.2.4",
  "type": "module",
  "keywords": [
    "quotes"
  ],
  "description": "A Random Quote Machine",
  "repository": "github:eldarlrd/random-quote-machine",
  "homepage": "https://eldarlrd.is-a.dev/random-quote-machine",
  "author": "Eldar Pashazade <eldarlrd@pm.me> (https://eldarlrd.is-a.dev)",
  "license": "AGPL-3.0-only",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "deployer": "pnpm build && gh-pages -b prod -m 'build(prod): deployment' -d dist",
    "lint": "eslint src --flag unstable_ts_config",
    "style": "stylelint 'src/**/*.{css,pcss,scss,sass,less,styl}'",
    "pretty": "prettier '{src,__{tests,mocks,snapshots}__}/**/*.{ts,tsx,scss}' --write",
    "format": "pnpm lint --fix && pnpm style --fix && pnpm pretty",
    "cut": "knip --fix --cache"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "bracketSameLine": true,
    "trailingComma": "none",
    "arrowParens": "avoid",
    "experimentalTernaries": true
  },
  "dependencies": {
    "@fontsource-variable/cormorant": "^5.2.6",
    "@fortawesome/fontawesome-svg-core": "^7.0.0",
    "@fortawesome/free-brands-svg-icons": "^7.0.0",
    "@fortawesome/free-solid-svg-icons": "^7.0.0",
    "@fortawesome/react-fontawesome": "^3.0.1",
    "@tanstack/react-query": "^5.85.5",
    "axios": "^1.11.0",
    "joi": "^18.0.1",
    "modern-normalize": "^3.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sass": "^1.91.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "gh-pages": "^6.3.0",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "knip": "^5.63.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.23.1",
    "stylelint-config-standard-scss": "^15.0.1",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.41.0",
    "vite": "^7.1.3",
    "vite-plugin-pwa": "^1.0.3",
    "vite-tsconfig-paths": "^5.1.4",
    "workbox-core": "^7.3.0",
    "workbox-precaching": "^7.3.0"
  }
}
